pkgname=cantarell-kagayaki
pkgver=0.0.25
pkgrel=1
epoch=1
pkgdesc="Cantarell font family"
arch=('any')
url="https://github.com/GNOME/cantarell-fonts"
license=('GPL2')
depends=('fontconfig')
provides=('cantarell-fonts')
conflicts=('cantarell-fonts' 'otf-cantarell-kagayaki')
groups=('kagayaki-bundle-fonts-extra')
source=("https://github.com/GNOME/cantarell-fonts/archive/${pkgver}.tar.gz"
        42-cantarell.conf)
sha1sums=('9357b0e3bf72c880d4d07295822dcc1129237ec3'
          'c74af297a94a88b22a283d3fcec9a2f328fe467f')

package() {
	cd cantarell-fonts-${pkgver}/otf
	
	# Install font
	install -m755 -d "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 Cantarell-*.otf \
		"${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	# Install infinality conf
	cd "${srcdir}"
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m644 42-cantarell.conf \
		"${pkgdir}"/etc/fonts/conf.avail/42-cantarell.conf
	
	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/42-cantarell.conf .
}
