# Maintainer: julroy67 <julroy67@gmail.com>
# Contributor: bohoomil <@zoho.com>

pkgname=ttf-cormorant-kagayaki
pkgver=3.3
pkgrel=1
pkgdesc="The Cormorant Typeface"
arch=('any')
license=('custom: OFL')
conflicts=('ttf-cormorant' 'ttf-cormorant-ibx')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
url='https://www.behance.net/gallery/28579883/Cormorant-an-open-source-display-font-family'
source=("https://github.com/CatharsisFonts/Cormorant/releases/download/v${pkgver}/Cormorant_Install_v${pkgver}.zip"
		40-cormorant.conf)
sha256sums=('288d1f0285b81564ba34db475d5ab0a07173580fefa5b4b82208b5c1e4838021'
            '0987235d59f1f379d24cddba81f43494429e637b2541ad2676348bbe84eba126')

package() {
	cd "${srcdir}/Cormorant_Install_v${pkgver}"

	# Install license
	install -Dm644 "OFL.txt" \
		"${pkgdir}"/usr/share/licenses/"${pkgname}"

	# Install font
	install -m755 -d "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 "1. TrueType Font Files/"*.ttf \
		"${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	# Install infinality conf
	cd "${srcdir}"
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m644 40-cormorant.conf \
		"${pkgdir}"/etc/fonts/conf.avail/40-cormorant.conf

	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/40-cormorant.conf .
}
