# Maintainer: julroy67 <julroy67@gmail.com>
# Contributor: bohoomil <@zoho.com>

pkgname=ttf-quintessential-kagayaki
pkgver=1.000
pkgrel=2
pkgdesc="The Quintessential typeface is a calligraphic lettering style based on the Italic Hand"
arch=('any')
url="https://fonts.google.com/specimen/Quintessential"
license=('custom:OFL')
depends=('fontconfig')
conflicts=('otf-quintessential-ib')
groups=('kagayaki-bundle-fonts')
source=("https://fonts.google.com/download?family=Quintessential"
        40-quintessential.conf)
sha256sums=('927787f6fceb3d2915669de0d79bd6e7b2d19c6f0073eca0f3748c09c52fec42'
            'a2d8634952dc67fac7064acec999b4fd914a151c9ed8b548baeba627af122866')

package(){
	cd "${srcdir}"

	# Install license
	install -Dm644 "OFL.txt" \
		"${pkgdir}"/usr/share/licenses/"${pkgname}"

	# Install font
	install -m755 -d "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 *.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	# Install infinality conf
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m644 40-quintessential.conf \
		"${pkgdir}"/etc/fonts/conf.avail/40-quintessential.conf

	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/40-quintessential.conf .
}
