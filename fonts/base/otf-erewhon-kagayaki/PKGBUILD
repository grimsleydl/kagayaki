# Maintainer: julroy67 <julroy67@gmail.com>
# Contributor: bohoomil <@zoho.com>

pkgname=otf-erewhon-kagayaki
pkgver=1.073
pkgrel=1
pkgdesc="Erewhon is based on the Heuristica family, which is based in turn on Utopia"
arch=('any')
url="http://www.ctan.org/tex-archive/fonts/erewhon"
license=('custom:OFL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-mkfontscale' 'xorg-mkfontdir')
conflicts=('otf-erewhon-ibx')
groups=('kagayaki-bundle-fonts')
source=("http://mirrors.ctan.org/fonts/erewhon.zip"
        40-erewhon.conf)
sha256sums=('00bb73e271473c26152f7b191d08b648b37f24a172051f90b1c7b86e0734996c'
            'a122f645314ed9e69f55ec77aef6956e4471418baa098f232165d2fbf130aa75')

package(){
	cd "${srcdir}/erewhon"

	# Install license
	install -Dm644 doc/"OFL.txt" \
		"${pkgdir}"/usr/share/licenses/"${pkgname}"/COPYING

	# Install font
	install -m755 -d "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 opentype/*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	# Install infinality conf
	cd "${srcdir}"
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m644 40-erewhon.conf \
		"${pkgdir}"/etc/fonts/conf.avail/40-erewhon.conf

	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/40-erewhon.conf .
}
