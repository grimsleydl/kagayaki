# Maintainer: julroy67 <julroy67@gmail.com>
# Contributor: bohoomil <@zoho.com>

pkgname=signika-family-kagayaki
pkgver=1.002
pkgrel=2
pkgdesc="Signika is a sans-serif with a gentle character, developed for wayfinding, signage, and other media where clarity of information is required"
arch=('any')
url="https://fonts.google.com/specimen/Signika"
license=('custom:OFL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-mkfontscale' 'xorg-mkfontdir')
conflicts=('ttf-signika-family-kagayaki')
groups=('kagayaki-bundle-fonts-extra')
source=("https://fonts.google.com/download?family=Signika"
        41-signika.conf)
sha256sums=('b272874538d32bcc6e556c9a415c5f7d6e7769160f41d08b4aba8a62b9d455e6'
            '783cd7a076874ed983ccc232edddef679140a819edab5e95d8c2af14653cdaa5')

package(){
	cd "${srcdir}"

	# Install license
	install -Dm644 "OFL.txt" \
		"${pkgdir}"/usr/share/licenses/"${pkgname}"/COPYING

	# Install font
	install -m755 -d "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 *.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	# Install infinality conf
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m644 41-signika.conf \
		"${pkgdir}"/etc/fonts/conf.avail/41-signika.conf

	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/41-signika.conf .
}
