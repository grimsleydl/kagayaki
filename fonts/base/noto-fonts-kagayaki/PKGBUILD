pkgver=${_pkgver//-}
pkgrel=1
arch=('any')
url="http://www.google.com/get/noto/"
license=('custom:OFL')
source=("https://github.com/googlei18n/noto-fonts/archive/${_commit}.zip"
	41-noto-cros.conf
	41-noto-sans.conf
	41-noto-serif.conf
	41-noto-mono.conf
	41-noto-extras.conf)
sha256sums=('54724fb4ea971efcf474cd193c4f45315800c89232dbf5ffd2d4c8ad2e39ee3a'
