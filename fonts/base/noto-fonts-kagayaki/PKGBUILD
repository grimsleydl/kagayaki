	install -m644 NotoSerifGurmukhi-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifHebrew-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifKannada-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifKhmer-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifLao-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifMalayalam-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifMyanmar-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifSinhala-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifTamil-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifTamilSlanted-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifTelugu-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifThai-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifTibetan-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"


	cd "${srcdir}/noto-fonts-${_commit}/phaseIII_only/unhinted/ttf"

	# License
	cd "${srcdir}/noto-fonts-${_commit}"
	install -Dm644 "LICENSE" \
		"${pkgdir}/usr/share/licenses/${pkgname}/COPYING"

	# Install infinality conf
	cd "${srcdir}"
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m644 41-noto-extras.conf \
		"${pkgdir}"/etc/fonts/conf.avail/41-noto-extras.conf

	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/41-noto-extras.conf .
}
