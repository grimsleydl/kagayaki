package_noto-fonts-cros-kagayaki() {
	pkgdesc="Google Noto TTF fonts (CROS)"
	depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-mkfontscale' 'xorg-mkfontdir')
	groups=('kagayaki-bundle-fonts')

	# Arimo, Cousine, Tinos
	cd "${srcdir}/noto-fonts-${_commit}/hinted"
	install -m755 -d "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 Arimo-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 Cousine-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 Tinos-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	# License
	cd "${srcdir}/noto-fonts-${_commit}"
	install -Dm644 "LICENSE" \
		"${pkgdir}/usr/share/licenses/${pkgname}/COPYING"

	# Install infinality conf
	cd "${srcdir}"
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m644 41-noto-cros.conf \
		"${pkgdir}"/etc/fonts/conf.avail/41-noto-cros.conf

	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/41-noto-cros.conf .
}

package_noto-fonts-sans-kagayaki() {
	pkgdesc="Google Noto TTF fonts (Sans)"
	depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-mkfontscale' 'xorg-mkfontdir')
	provides=('noto-fonts' 'ttf-font' 'noto-fonts-kagayaki')
	conflicts=('ttf-noto-fonts-kagayaki' 'noto-fonts' 'noto-fonts-kagayaki')
	groups=('kagayaki-bundle-fonts')

	# Noto Sans
	cd "${srcdir}/noto-fonts-${_commit}/hinted"
	install -m755 -d "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	install -m644 NotoSans-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansDisplay-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansSymbols-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansSymbols2-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	# License
	cd "${srcdir}/noto-fonts-${_commit}"
	install -Dm644 "LICENSE" \
		"${pkgdir}/usr/share/licenses/${pkgname}/COPYING"

	# Install infinality conf
	cd "${srcdir}"
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m644 41-noto-sans.conf \
		"${pkgdir}"/etc/fonts/conf.avail/41-noto-sans.conf

	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/41-noto-sans.conf .
}

