	install -m644 NotoSansSharada/NotoSansSharada-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansSoraSompeng/NotoSansSoraSompeng-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansSundanese/NotoSansSundanese-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansSylotiNagri/NotoSansSylotiNagri-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansSymbols2/NotoSansSymbols2-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansTagalog/NotoSansTagalog-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansTagbanwa/NotoSansTagbanwa-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansTaiLe/NotoSansTaiLe-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansTaiViet/NotoSansTaiViet-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansUgaritic/NotoSansUgaritic-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansYi/NotoSansYi-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	cd "${srcdir}/noto-fonts-${_commit}/phaseIII_only/unhinted/otf/serif/"
	install -m644 NotoSerifBalinese/NotoSerifBalinese-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifGurmukhi/NotoSerifGurmukhi-*.otf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	# License
	cd "${srcdir}/noto-fonts-${_commit}"
	install -Dm644 "LICENSE" \
		"${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
	
	# Install infinality conf
	cd "${srcdir}"
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m644 41-noto-extras.conf \
		"${pkgdir}"/etc/fonts/conf.avail/41-noto-extras.conf

	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/41-noto-extras.conf .
}
