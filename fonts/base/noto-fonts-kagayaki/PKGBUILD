pkgver=${_pkgver//-}
pkgrel=1
arch=('any')
url="http://www.google.com/get/noto/"
license=('custom:OFL')
source=("https://github.com/googlei18n/noto-fonts/archive/${_commit}.zip"
	41-noto-cros.conf
	41-noto-sans.conf
	41-noto-serif.conf
	41-noto-mono.conf
	41-noto-extras.conf)
sha256sums=('f138e68741ea9ebf76b622d805442ffe73b6e9d85db0c3280e21efa13c813507'
            'a079ddbdcb1b9f2b2bb31f373fa5d135aaff57a06b590faffc1dbb71adf3fc0c'
            '061fd139319ad4ae7ee83e98a1cfcd0602cfb71b8d4b5266f61d7a2d955ec3f1'
