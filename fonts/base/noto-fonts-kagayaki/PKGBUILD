pkgname=('noto-fonts-cros-kagayaki' 'noto-fonts-sans-kagayaki' 'noto-fonts-serif-kagayaki' 'noto-fonts-mono-kagayaki' 'noto-fonts-extras-kagayaki')
_pkgver=2018-10-05
_commit=b20c9c07139b22eb38013b1f80f9a5222c6058c6
pkgver=${_pkgver//-}
pkgrel=1
arch=('any')
url="http://www.google.com/get/noto/"
license=('custom:OFL')
source=("https://github.com/googlei18n/noto-fonts/archive/${_commit}.zip"
	41-noto-cros.conf
	41-noto-sans.conf
	41-noto-serif.conf
	41-noto-mono.conf
	41-noto-extras.conf)
sha256sums=('521f171bb06c0a493d725786b1e7439dd1facd77d073cf6d4c5256a16c3cf8fd'
            'a079ddbdcb1b9f2b2bb31f373fa5d135aaff57a06b590faffc1dbb71adf3fc0c'
            'd027a76aabdf7a3c6c638ff3fe17ac634c917f764471a74424e538a073a3ae31'
            'a1927f93544bc87563feea845c00959f8026acd6722b2804f7569ffa52b02972'
