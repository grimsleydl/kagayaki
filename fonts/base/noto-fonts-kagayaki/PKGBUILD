package_noto-fonts-extras-kagayaki() {
	pkgdesc="Google Noto TTF fonts (Extras)"
	depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-mkfontscale' 'xorg-mkfontdir')
	provides=('noto-fonts-nonlatin-kagayaki')
	conflicts=('noto-fonts-nonlatin-kagayaki')
	groups=('kagayaki-bundle-fonts')

	# Extras
	cd "${srcdir}/noto-fonts-${_commit}/unhinted"
	install -m755 -d "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoNastaliqUrdu-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansBalinese-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSansCanadianAboriginal-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
