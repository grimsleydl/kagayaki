package_noto-fonts-serif-kagayaki() {
	pkgdesc="Google Noto TTF fonts (Serif)"
	depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-mkfontscale' 'xorg-mkfontdir')
	groups=('kagayaki-bundle-fonts')

	# Noto Serif
	cd "${srcdir}/noto-fonts-${_commit}/hinted"
	install -m755 -d "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoNaskhArabic-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoNaskhArabicUI-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifArmenian-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifBengali-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifDevanagari-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifEthiopic-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifGeorgian-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifGujarati-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifHebrew-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifKannada-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifKhmer-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifLao-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifMalayalam-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifMyanmar-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifSinhala-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifTamil-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifTelugu-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifThai-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	install -m644 NotoSerif-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"
	install -m644 NotoSerifDisplay-*.ttf "${pkgdir}"/usr/share/fonts/kagayaki/"${pkgname}"

	# License
	cd "${srcdir}/noto-fonts-${_commit}"
	install -Dm644 "LICENSE" \
		"${pkgdir}/usr/share/licenses/${pkgname}/COPYING"
	
	# Install infinality conf
	cd "${srcdir}"
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m644 41-noto-serif.conf \
		"${pkgdir}"/etc/fonts/conf.avail/41-noto-serif.conf
	
	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/41-noto-serif.conf .
}

