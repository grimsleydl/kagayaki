# Maintainer: Julien Humbert <julroy67@gmail.com>
# Contributor: bohoomil <@zoho.com>

pkgname=ttf-ipamjmincho-kagayaki
pkgver=004.01
_pkgver=${pkgver/./}
pkgrel=1
pkgdesc="Japanese outline Mincho fonts including the unified characters of the Basic Resident Registers Network and the Family Register of Japan (based on IPAex Mincho fonts)"
arch=('any')
url="http://ossipedia.ipa.go.jp/ipamjfont/"
license=('custom:IPA')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-mkfontscale' 'xorg-mkfontdir')
provides=('ttf-ipamjfont-ibx')
conflicts=('ttf-ipamjfont-ibx')
replaces=('ttf-ipamjfont-ibx')
groups=('kagayaki-bundle-fonts')
source=(http://dl.mojikiban.ipa.go.jp/IPAmjMincho/ipamjm${_pkgver}.zip
	40-ipamjmincho.conf
	90-tt-ipamjmincho.conf)
sha256sums=('6ebc67edcfd34718925657137ad9b39fa70f2c00'
          '57e4bb8164d546f066c715cc0aa886059af0c901'
          'b65df8dcbd12c100110f7800f07354959ef61580')

package() {
	cd "$srcdir"
	
	# Install license
	install -Dm644 "IPA_Font_License_Agreement_v1.0.txt" \
		"${pkgdir}"/usr/share/licenses/"${pkgname}"/COPYING
	
	# Install font
	install -m755 -d "${pkgdir}"/usr/share/fonts/"${pkgname}"
	install -m644 ipamjm.ttf \
		"${pkgdir}"/usr/share/fonts/"${pkgname}"
	
	# Install infinality conf
	install -m755 -d "${pkgdir}"/etc/fonts/conf.d
	install -m755 -d "${pkgdir}"/etc/fonts/conf.avail
	install -m644 40-ipamjmincho.conf \
		"${pkgdir}"/etc/fonts/conf.avail/40-ipamjmincho.conf
	install -m644 90-tt-ipamjmincho.conf \
		"${pkgdir}"/etc/fonts/conf.avail/90-tt-ipamjmincho.conf
	
	cd "${pkgdir}"/etc/fonts/conf.d
	ln -s ../conf.avail/40-ipamjmincho.conf .
	ln -s ../conf.avail/90-tt-ipamjmincho.conf .
}
